{
  "name": "@wattmaven/docs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "install:hooks": "lefthook install",
    "commit": "commit",
    "type-check": "tsc --noEmit",
    "format:check": "eslint . && prettier --check .",
    "format:fix": "eslint . --fix && prettier --write .",
    "declutter": "knip --no-exit-code",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test:unit": "vitest run --passWithNoTests",
    "test:unit:watch": "vitest --passWithNoTests",
    "test:e2e": "playwright test --pass-with-no-tests",
    "test:e2e:report": "playwright show-report",
    "test": "pnpm test:unit",
    "pre-commit-tasks": "turbo build type-check test",
    "ci:version": "changeset version && pnpm format:fix",
    "ci:publish": "changeset publish",
    "clean": "rimraf coverage node_modules .astro .turbo playwright-report test-results"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/starlight": "^0.26.2",
    "@astrojs/starlight-tailwind": "^2.0.3",
    "@astrojs/tailwind": "^5.1.2",
    "@inox-tools/star-warp": "^0.1.4",
    "@sentry/astro": "^8.35.0",
    "@t3-oss/env-core": "^0.11.1",
    "astro": "^4.15.3",
    "rehype-mermaid": "^3.0.0",
    "sharp": "^0.32.5",
    "starlight-links-validator": "^0.12.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.9",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@commitlint/prompt-cli": "19.5.0",
    "@commitlint/types": "19.5.0",
    "@eslint/js": "9.14.0",
    "@playwright/test": "1.48.2",
    "eslint": "9.14.0",
    "eslint-plugin-astro": "1.3.0",
    "jsdom": "25.0.1",
    "knip": "5.36.1",
    "lefthook": "1.8.2",
    "prettier": "3.3.3",
    "prettier-plugin-astro": "0.14.1",
    "rimraf": "6.0.1",
    "turbo": "2.1.3",
    "typescript-eslint": "8.12.2",
    "vite": "5.4.10",
    "vitest": "2.1.4"
  },
  "packageManager": "pnpm@9.7.0"
}
